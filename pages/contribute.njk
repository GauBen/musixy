<h1 class="page-title">musixy</h1>
<div class="contribute-form">
  <form action="">
    <p>Youtube link: <input type="text" name="youtubeLink" size="50" required></p>
    <p>
      <canvas id="board" class="canvas"></canvas>
    </p>
    <p>
      <input type="hidden" name="x">
      <input type="hidden" name="y">
      <button type="submit" disabled>Add song</button>
      <strong id="tip">Click on the board to place the song</strong>
    </p>
  </form>
</div>
<p>
  <a href="{{ '/' | url }}">Back to homepage</a>
</p>
<script>
  import {ContributeApp} from '~assets/app/contribute-app'

  const app = new ContributeApp(document.querySelector('#board'))
  app.run()
</script>
