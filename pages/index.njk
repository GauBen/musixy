---
layout: html.njk
---
<h1 class="page-title">musixy</h1>
{% include 'user.njk' %}
<div class="playlist-generator">
  <div class="wrapper">
    <div class="selector">
      <canvas id="board" class="canvas"></canvas>
      <div class="slider-and-tooltip">
        <input type="range" name="duration" id="duration" step="5" min="15" max="60" list="ticks" value="30">
        <datalist id="ticks">
          <option value="15"></option>
          <option value="30"></option>
          <option value="45"></option>
          <option value="60"></option>
        </datalist>
        <span class="tooltip" id="duration-tooltip">30 min</span>
      </div>
    </div>
    <div id="playlist" class="playlist">
      <p class="user-instruction">Click twice on the whiteboard to create a playlist</p>
    </div>
  </div>
</div>
<p class="_center">
  <a href="{{ '/contribute' | url }}">Add a song</a>
</p>
<script src='~/assets/app/home-app'></script>
