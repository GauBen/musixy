$dark = #444
$white = #fff
$shadow = 0 2px 5px #889
$radius = 4px
$link = #000

*
*::before
*::after
  box-sizing inherit

html
  box-sizing border-box

body
  margin 0
  font-family 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
  line-height 1.5

a
  $line = 1px
  display inline
  padding-bottom 2 * $line
  color $link
  text-decoration none
  background-image linear-gradient($link, $link), linear-gradient($link, $link)
  background-repeat no-repeat, no-repeat
  background-position bottom left, bottom right
  background-size 100% $line, 0% (2 * $line)
  transition 0.2s color, 0.2s background-size
  border-radius 2 * $line

  &:hover
    background-position bottom left, bottom left
    background-size 100% $line, 100% (2 * $line)

  &:focus
  &:active
    color $white
    background-position bottom left, bottom left
    background-size 100% 100%, 0% (2 * $line)
    outline none

canvas
  background $white

hr
  height 0.5rem
  margin 1rem auto
  background radial-gradient(ellipse at top, #8894, transparent 80%)
  border none

._center
  text-align center

.page-title
  font-size 4em
  margin 1rem 0
  text-align center

.playlist-generator
  display flex
  justify-content center
  align-items center

  > .wrapper
    display flex
    flex-direction column
    justify-content center
    align-items center
    box-shadow $shadow
    border-radius $radius

    > .selector
      padding 1em

    > .playlist
      display flex
      flex-direction column
      justify-content center
      min-height 400px
      min-width 400px
      align-self stretch

      > .wrapper
        flex 1
        overflow auto
        position relative

    @media (min-width 864px)
      flex-direction row
      align-items stretch

.music-list
  height 0
  margin 0
  padding 0 1em
  overflow visible
  list-style none
  position absolute

  > .item
    margin 0
    padding 0.5em 0

.playlist-entry
  display grid
  grid-template-columns auto 1fr
  grid-template-rows 1fr 1fr
  column-gap 1em

  > .cover
    grid-column 1
    grid-row 1 / 3
    width auto
    height 3em

  > .title
    font-weight bold
    white-space nowrap
    text-overflow ellipsis
    overflow hidden

  > .artist
    opacity 0.8
    white-space nowrap
    text-overflow ellipsis
    overflow hidden

.youtube-link
  text-align center

.user-instruction
  padding 0 2em

.contribute-form
  display flex
  align-items center
  justify-content center

  > .wrapper
    box-shadow $shadow
    border-radius $radius
    padding 0 1em
    margin 0 auto

.long-input
  > input
    width 100%
    max-width 100%

.user-box
  display flex
  align-items center
  justify-content center

  > .text
    padding 0 3em 1em
    border-bottom 2px solid $dark
    text-align center

.login-form
  max-width 300px
  margin auto
  overflow hidden
  box-shadow $shadow
  border-radius $radius
  padding 0 1em

.slider-and-tooltip
  display flex
  align-items center

  > input
    flex 1

  > .tooltip
    padding 0.25em

.error-message
  background #fee
  border 1px solid #f88
  padding 0.5em

.success-message
  background #efe
  border 1px solid #8f8
  padding 0.5em

.playlist-history
  box-shadow $shadow
  border-radius $radius
  margin auto
  max-width 600px
  padding 0 1em
  overflow hidden

  > .entry
    display grid
    grid-template-columns auto 1fr
    grid-template-rows 1fr 1fr
    column-gap 1em
    margin 1em 0

    > .image
      grid-row 1 / 3

    > p
      margin 0
