$dark = #444
$white = #fff
$shadow = 0 2px 5px #889
$radius = 4px

*
*::before
*::after
  box-sizing inherit

html
  box-sizing border-box

body
  margin 0
  font-family 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif

a
  color inherit

canvas
  background $white

hr
  height 0.5rem
  margin 1rem auto
  background radial-gradient(ellipse at top, #8894, transparent 80%)
  border none

._center
  text-align center

.page-title
  font-size 4em
  margin 1rem 0
  text-align center

.playlist-generator
  display flex
  justify-content center
  align-items center

  > .wrapper
    display flex
    flex-direction column
    justify-content center
    align-items center
    box-shadow $shadow
    border-radius $radius

    > .selector
      padding 1em

    > .playlist
      display flex
      flex-direction column
      justify-content center
      min-height 400px
      min-width 400px
      align-self stretch

      > .wrapper
        flex 1
        overflow auto
        position relative

    @media (min-width 864px)
      flex-direction row
      align-items stretch

.music-list
  height 0
  margin 0
  padding 0 1em
  overflow visible
  list-style none
  position absolute

  > .item
    margin 0
    padding 0.5em 0

.playlist-entry
  display grid
  grid-template-columns auto 1fr
  grid-template-rows 1fr 1fr
  column-gap 1em

  > .cover
    grid-column 1
    grid-row 1 / 3
    width auto
    height 2.8em

  > .title
    font-weight bold
    white-space nowrap
    text-overflow ellipsis
    overflow hidden

  > .artist
    opacity 0.8
    white-space nowrap
    text-overflow ellipsis
    overflow hidden

.youtube-link
  text-align center

.user-instruction
  padding 0 2em

.contribute-form
  display flex
  align-items center
  justify-content center

  > .wrapper
    box-shadow $shadow
    border-radius $radius
    padding 0 1em
    margin 0 auto

.long-input
  > input
    width 100%
    max-width 100%

.user-box
  display flex
  align-items center
  justify-content center

  > .text
    padding 1em
    border-bottom 2px solid $dark
    text-align center

.login-form
  max-width 300px
  margin auto
  overflow hidden
  box-shadow $shadow
  border-radius $radius
  padding 0 1em

.slider-and-tooltip
  display flex
  align-items center

  > input
    flex 1

  > .tooltip
    padding 0.25em

.error-message
  background #fee
  border 1px solid #f88
  padding 0.5em
