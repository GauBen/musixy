body
  margin 0
  font-family 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif

a
  color inherit

.page-title
  font-size 4em
  margin 1rem 0
  text-align center

.playlist-generator
  display flex
  flex-direction column
  justify-content center
  align-items center

  > .canvas
    border 2px solid #444

  > .playlist
    display flex
    flex-direction column
    background #444
    color #fff
    justify-content center
    min-height 404px
    width 404px

    > .wrapper
      flex 1
      overflow auto

  @media (min-width 800px)
    flex-direction row
    align-items stretch

    > .playlist
      width 350px

.music-list
  height 0
  overflow visible
  list-style none
  padding 0 1em

  > .item
    margin 1em 0

.playlist-entry
  display grid
  grid-template-columns auto 1fr
  grid-template-rows 1fr 1fr
  column-gap 1em

  > .cover
    grid-column 1
    grid-row 1 / 3
    width auto
    height 2.8em

  > .title
    font-weight bold

  > .artist
    opacity 0.8

.youtube-link
  text-align center

.user-instruction
  padding 0 2em
