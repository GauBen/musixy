{
  "name": "musixy",
  "version": "0.0.1",
  "author": "GauBen <benaim.gautier@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && yarn build:eleventy && yarn build:parcel",
    "build:eleventy": "eleventy --output _pre-dist",
    "build:parcel": "PARCEL_WORKERS=0 parcel build '_pre-dist/**/*.html' --dist-dir _dist --cache-dir _parcel-cache",
    "clean": "rimraf _pre-dist _dist",
    "start": "yarn build && npm-run-all --parallel watch:**",
    "watch:eleventy": "eleventy --serve --output _pre-dist",
    "watch:parcel": "PARCEL_WORKERS=0 parcel serve '_pre-dist/**/*.html' --dist-dir _dist --cache-dir _parcel-cache",
    "test": "xo"
  },
  "devDependencies": {
    "@11ty/eleventy": "11ty/eleventy",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-beta.2",
    "rimraf": "^3.0.2",
    "xo": "^0.39.1"
  }
}
